<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @flat.photos.each_with_index do |photo, index| %>
    <div class="carousel-item <%= index == 0 ? 'active' : "" %>">
    <%= cl_image_tag photo.key, class: "d-block w-100 imgsize"%>
    </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h1><%= @flat.name %></h1>
        <p class="flat-show-address"><%= @flat.location %></p>
      </div>
      <div class="flat-show-card">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
        <div class="map" style="background-image: url('https://www.google.com/maps/d/thumbnail?mid=1CucW7pQdzUo3pIqXQYaWF8trh0s')"></div>
      </div>
    </div>
    <div class="col-4">
      <div class="flat-show-card">
        <h5>Book this place!</h5>
        <%= simple_form_for [@flat, @booking] do |f| %>
        <%=f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"}  %>
        <%=f.input :end_date,  as: :string, required: false, input_html: {class: "datepicker"}  %>
        <% if @flat.owner == current_user %>
          <%=f.submit "Book", class: "btn btn-success mt-2", disabled: true %>
        <% else %>
          <%=f.submit "Book", class: "btn btn-success mt-2" %>
        <% end %>
        <% end %>

      </div>
      <div class="flat-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="d-flex">
            <div class="dolar p-2">
              <i class="fas fa-dollar-sign"></i>
              <%= @flat.price %>
            </div>

              <% if @flat.wifi  %>
                <div class="wifi p-2">
                  <i class="fas fa-wifi"></i>
                </div>
              <% end %>

            <% if @flat.pool  %>
              <div class="pool p-2">
                <i class="fas fa-swimmer"></i>
              </div>
            <% end %>

            <% if @flat.bathroom  %>
              <div class="bathroom p-2">
                <%= @flat.bathroom%>
                <i class="fas fa-bath"></i>
              </div>
            <% end %>

            <% if @flat.bedroom  %>
                <div class="bedroom p-2">
                  <%= @flat.bedroom%>
                  <i class="fas fa-bed"></i>
                </div>
              <% end %>
            </div>
        </div>
      </div>
      <div class="flat-show-card">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>

          <div class="flex">
          <%= social_share_button_tag(@flat.name) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="container mt-3">
<h1>Other Flats Nearby</h1>
  <div class="row">
    <div class="col-6 col-md-4 col-lg-3 mt-3">
      <div class="card">
      <% if @flat_nearby %>
        <%= cl_image_tag @flat_nearby.photos.first.key %>
        <div class="card-body bg-light">
          <p class="color-text">Entire apartment in <%= @flat_nearby.location %></span></p>
          <h5 class="card-title"> <strong><%= @flat_nearby.name %></h5></strong>
          <p class="card-text"> <%= @flat_nearby.location %> <br>
          <i class="fas fa-dollar-sign"></i><%= @flat_nearby.price %>
          <i class="fas fa-bath"></i>  <%= @flat_nearby.bathroom%>
          <i class="fas fa-bed"></i> <%= @flat.bedroom%>
          <% if @flat_nearby.pool  %>
          <i class="fas fa-swimmer"></i>
          <% end  %>
          <% if @flat_nearby.wifi  %>
          <i class="fas fa-wifi"></i>
          <% end  %>
          <p><strong>Rating:</strong> <% @flat_nearby.rating.times do  %> <i class="fas fa-star"></i>
          <% end %></p>
       </div>
        <div class="m-3">
          <%= link_to "More Info", flat_path(@flat_nearby)%>
        </div>
      <% else %>
        <p>No flats nearby</p>
      <% end %>
    </div>
  </div>
  </div>
</div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h1><%= @flat.name %></h1>
        <p class="flat-show-address"><%= @flat.location %></p>
      </div>
      <div class="flat-show-card">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
        <div class="map" style="background-image: url('https://www.google.com/maps/d/thumbnail?mid=1CucW7pQdzUo3pIqXQYaWF8trh0s')"></div>
      </div>
    </div>

    <div class="col-4">
      <div class="flat-show-card">
        <h5>Book this place!</h5>
        <%= simple_form_for [@flat, @booking] do |f| %>
        <%=f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"}  %>
        <%=f.input :end_date,  as: :string, required: false, input_html: {class: "datepicker"}  %>
        <%=f.submit "Book", class: "btn btn-success mt-2" %>
        <% end %>

      </div>
      <div class="flat-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <i class="fas fa-dollar-sign"></i> <span><%= @flat.price %></span>
          </div>
        </div>
      </div>
      <div class="flat-show-card">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>

          <div class="flex">
            <i class="fab fa-facebook-square fa-2x"></i>
            <i class="fab fa-twitter fa-2x"></i>
            <i class="fab fa-pinterest-p fa-2x"></i>
            <i class="fas fa-envelope fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="container mt-3">
<h1>Other Flats Nearby</h1>
  <div class="row">
  <% @flats.each do |flat| %>
  <% if flat.location == @flat.location %>
  <div class="col-6 col-md-4 col-lg-3 mt-3">
    <div class="card">
      <img class="card-img-top" src="https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200" alt="Flat image">
      <div class="card-body bg-light">
        <h5 class="card-title"> <strong><%= flat.name %></h5></strong>
        <p class="card-text"> <%=flat.location %>
        <div class="m-3">
          <i class="fas fa-euro-sign"></i> <span><%= flat.price %></span>
        </div>
      </div>
        <div class="m-3">
          <%= link_to "More Info", flat_path(flat)%>
        </div>
    </div>
  </div>
  <% end %>
  <% end %>
  </div>
</div>